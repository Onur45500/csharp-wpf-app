<Window x:Class="csharp_wpf_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharp_wpf_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="tbStatus" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30"></TextBlock>
        <TextBlock Name="counterText" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Margin="50"></TextBlock>


        <Button Name="toggleRun" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Run" Click="toggleRun_Click"></Button>
        <Button Name="counterBtn" Width="150" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Counter" Click="counterBtn_Click" Margin="50"></Button>

    </Grid>
</Window>
